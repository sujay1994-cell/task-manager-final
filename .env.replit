# Node Environment
NODE_ENV=development
PORT=3000

# MongoDB Configuration (Replace with your actual MongoDB URI)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/magazine_db

# JWT Configuration
JWT_SECRET=replit_jwt_secret_key_here
JWT_EXPIRE=24h

# Upload Configuration
UPLOAD_PATH=/home/runner/${REPL_SLUG}/uploads
MAX_FILE_SIZE=50000000

# Frontend URL (will be updated by Replit)
FRONTEND_URL=${REPL_SLUG}.${REPL_OWNER}.repl.co

# Replit Database Configuration
REPLIT_DB_URL=${REPL_DB_URL}